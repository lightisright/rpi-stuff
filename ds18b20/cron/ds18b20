# Check kitchen TÂ°C every minute & save it into /var/log/ds18b20/kitchen.log
*/5 *     * * *     root   if [ $(find /sys/bus/w1/devices/ -name "28-*" | wc -l) -eq 1 ]; then echo `date +"\%Y-\%m-\%d \%H:\%M:\%S"`\;`date +\%s`\;`find /sys/bus/w1/devices/ -name "28-*" -exec cat {}/w1_slave \; | grep "t=" | awk -F "t=" '{print $2/1000}'` >> /var/lib/ds18b20/kitchen.log; fi;

